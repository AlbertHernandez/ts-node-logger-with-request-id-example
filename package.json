  "scripts": {
    "dev:fortune-teller": "ts-node-dev --ignore-watch node_modules src/apps/fortune-teller/backend/start.ts | pino-pretty -c --messageKey message --translateTime SYS:standard",
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "NODE_ENV=test jest tests/contexts",
    "test:integration": "NODE_ENV=test jest tests/apps",
    "prepare": "husky install",
    "lint": "eslint --ignore-path .gitignore . --ext .js,.ts",
    "lint:fix": "npm run lint -- --fix",
    "build": "npm run build:clean && npm run build:tsc",
    "build:clean": "rimraf dist; exit 0",
    "build:tsc": "tsc -p tsconfig.prod.json"
  },
